@model Advert
@{
    ViewData["Title"] = "ImageCreate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-2 ml-1 mr-1">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <form method="post" enctype="multipart/form-data" asp-antiforgery="true">
                        <input type="hidden" asp-for="AdvertId" />
                        <br />
                        <label>Başlık</label>
                        <input disabled type="text" asp-for="AdvertTitle" class="form-control" />
                        <span asp-validation-for="AdvertTitle" class="text text-danger"></span>
                        <br />
                        <input type="file" asp-for="Image" multiple />
                        <hr />
                        <button type="submit" class="btn btn-warning">Resimleri Ekle</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



